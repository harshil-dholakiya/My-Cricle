<div class="row">
    {{#if postData}}
    {{#each postData}}
    {{#each postdata}}
    <div class="col-md-4 mt-4">
        <div class="container align-self-center">
            <div class="row row-cards">
                <div class="grandParent">
                    <div class="card card-sm">
                        <img src="/images/posts/{{postPath}}" class="card-img-top postImage" height="370px">
                        <div class="myModal modal" style="display: none;">
                            <span class="close">&times;</span>
                            <img class="post-modal-content img01">
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <span class="avatar me-3 rounded-circle"
                                    style="background-image: url(/images/users/{{../profilePath}}); border: radius 25px;"></span>
                                <div>
                                    <div>{{../firstName}} {{../lastName}}</div>
                                    <div class="text-muted">{{dateFormat createdOn}}</div>
                                </div>
                                <div class="ms-auto d-flex">
                                    {{#inArray ../../savedPost this._id}}
                                    <a href="javascript:void(0)" class="text-muted" data-title="Unsave">
                                        <div class="savedPostDiv save-post" data-id="{{_id}}">
                                            <svg xmlns="http://www.w3.org/2000/svg"
                                                class="icon icon-tabler text-blue icon-tabler-heart-filled" width="24"
                                                height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                                fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path
                                                    d="M6.979 3.074a6 6 0 0 1 4.988 1.425l.037 .033l.034 -.03a6 6 0 0 1 4.733 -1.44l.246 .036a6 6 0 0 1 3.364 10.008l-.18 .185l-.048 .041l-7.45 7.379a1 1 0 0 1 -1.313 .082l-.094 -.082l-7.493 -7.422a6 6 0 0 1 3.176 -10.215z"
                                                    stroke-width="0" fill="currentColor"></path>
                                            </svg>
                                            <p class="ms-1 savedPostCountClass">{{savedPostArray}}</p>
                                        </div>
                                    </a>
                                    {{else}}
                                    {{#compare ../_id "!=" ../../userDetails._id }}

                                    <a href="javascript:void(0)" class="text-muted" data-title="Save"
                                        style="text-decoration: none;">
                                        <div class="savedPostDiv save-post" data-id="{{_id}}">
                                            <svg xmlns="http://www.w3.org/2000/svg"
                                                class="icon icon-tabler icon-tabler-heart" width="24" height="24"
                                                viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                                                stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path
                                                    d="M19.5 12.572l-7.5 7.428l-7.5 -7.428a5 5 0 1 1 7.5 -6.566a5 5 0 1 1 7.5 6.572">
                                                </path>
                                            </svg>
                                            <p class="ms-1 savedPostCountClass">{{savedPostArray}}</p>
                                        </div>
                                    </a>

                                    {{/compare}}
                                    {{/inArray}}

                                    <a href="javascript: void(0)" class="text-muted comment me-2" title="Comment"
                                        data-bs-toggle="modal" data-postid="{{_id}}" id="{{_id}}"
                                        data-postimage="{{postPath}}">
                                        <div class="commentDiv">
                                            <svg xmlns="http://www.w3.org/2000/svg" style="margin-left: 10px ;"
                                                class="icon icon-tabler icon-tabler-message-circle" width="24"
                                                height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                                fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path
                                                    d="M3 20l1.3 -3.9c-2.324 -3.437 -1.426 -7.872 2.1 -10.374c3.526 -2.501 8.59 -2.296 11.845 .48c3.255 2.777 3.695 7.266 1.029 10.501c-2.666 3.235 -7.615 4.215 -11.574 2.293l-4.7 1">
                                                </path>
                                            </svg>
                                        </div>
                                    </a>

                                    {{!-- Three Dots --}}

                                    {{#compare ../_id "===" ../../userDetails._id }}

                                   <a href="javascript:void(0)" class="text-muted disabled"
                                            data-title="Save" style="text-decoration: none;">
                                            <div class="disable-links" data-id="{{_id}}">
                                                <svg xmlns="http://www.w3.org/2000/svg"
                                                    class="icon icon-tabler icon-tabler-heart" width="24" height="24"
                                                    viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"
                                                    fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                    <path
                                                        d="M19.5 12.572l-7.5 7.428l-7.5 -7.428a5 5 0 1 1 7.5 -6.566a5 5 0 1 1 7.5 6.572">
                                                    </path>
                                                </svg>
                                                <p class="ms-1 savedPostCountClass">{{savedPostArray}}</p>
                                            </div>
                                        </a>
                                    
                                    <div class="nav-item dropdown ms-1">
                                        <a href="#" class="nav-link d-flex lh-1 text-reset p-0"
                                            data-bs-toggle="dropdown" aria-label="Open user menu">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="22"
                                                class="text-muted" fill="currentColor" class="bi bi-three-dots-vertical"
                                                viewBox="0 0 16 16">
                                                <path
                                                    d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                                            </svg>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                            <a href="javascript: void(0)" class='text-decoration-none' id="editBtn"
                                                title="Edit Post" data-bs-toggle="modal"
                                                data-bs-target="#modal-editPost" data-id="{{_id}}"
                                                style="margin-right: 10px;">

                                                <svg xmlns="http://www.w3.org/2000/svg"
                                                    class="icon icon-tabler icon-tabler-pencil-minus" width="24"
                                                    height="24" viewBox="0 0 24 24" stroke-width="2"
                                                    stroke="currentColor" fill="none" stroke-linecap="round"
                                                    stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>

                                                    <path d="M8 20l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4h4z">
                                                    </path>
                                                    <path d="M13.5 6.5l4 4"></path>
                                                    <path d="M16 18h4"></path>
                                                    <span class="ms-3">Edit Post</span>
                                                </svg>
                                            </a>
                                            <div class="mt-2">
                                                <a href="javascript:void(0)" class='text-decoration-none'
                                                    data-archive="unarchive" title="Archive Post">
                                                    <div class="archivePostDiv d-flex" data-id="{{_id}}">
                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                            class="icon icon-tabler icon-tabler-exposure" width="24"
                                                            height="24" viewBox="0 0 24 24" stroke-width="2"
                                                            stroke="currentColor" fill="none" stroke-linecap="round"
                                                            stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                            <path
                                                                d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z">
                                                            </path>
                                                            <path d="M4.6 19.4l14.8 -14.8"></path>
                                                            <path d="M7 9h4m-2 -2v4"></path>
                                                            <path d="M13 16l4 0"></path>
                                                            <span class="ms-3">Archive Post</span>
                                                        </svg>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    {{/compare}}
                                </div>
                            </div><br>
                            <div class="mt-2"><span class="text-blue">Title</span></div>
                            <div>{{title}}</div>
                            <div class="mt-2"><span class="text-blue">Description</span></div>
                            <div class="overflow-auto" style="width: 100%; height: 55px;">{{description}}</div>
                            {{!-- <div class="mt-2"><span class="text-blue">Like: </span> <span
                                    class=savedPostCountClass"">{{savedPostArray}}</span></div> --}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><br><br>
    {{/each}}
    {{/each}}
</div>

{{!-- Pagination --}}
<div class="d-flex mt-3">
    <ul class="pagination ms-auto">
        <li class="page-item disabled">
            <a class="page-link" href="#" aria-disabled="false">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                    stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M15 6l-6 6l6 6"></path>
                </svg>
            </a>
        </li>

        {{#each pages}}
        <li class="page-item {{this}}"><a class="page-link pages" href="javascript:void(0)"
                data-page-value="{{this}}">{{this}}</a></li>
        {{/each}}
        <li class="page-item">
            <a class="page-link" href="#">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                    stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M9 6l6 6l-6 6"></path>
                </svg>
            </a>
        </li>
    </ul>
</div>

{{else}}
<h2 style="margin: 0px 500px 5px 745px;">No Post Available</h2>
<div class="empty-action" style="margin: 0px 500px 500px 750px;">
    <a href="/" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2"
            stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M5 12l14 0"></path>
            <path d="M5 12l6 6"></path>
            <path d="M5 12l6 -6"></path>
        </svg>
        Take me home
    </a>
</div>
{{/if}}
</div>

{{!-- Comment Model --}}
<div class="modal modal-blur fade" id="modal-comment" tabindex="-1" role="dialog" aria-hidden="true">
    <form id="commentForm" enctype="multipart/form-data">
        <input type="hidden" value="" id="hidden">
        <div class="modal-dialog modal-lg has-error" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Comment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="postImageDiv mb-4">
                        <img src="" alt="" id="postPhoto" width="50%" height="300px" style="margin-left: 155px;">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Comment</label>
                        <textarea type="text" class="form-control" name="message" id="comment"
                            placeholder="Comment..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">
                        Cancel
                    </a>
                    <button class="btn btn-primary ms-auto commentBtn" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24"
                            stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
                            stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M12 5l0 14" />
                            <path d="M5 12l14 0" />
                        </svg>
                        Add Comment
                    </button>
                </div>
                <div class="commentMessageDiv"></div>
            </div>
        </div>
    </form>
</div>

{{!-- Show notification liked Post --}}
<div class="modal modal-blur fade" id="modal-showPost" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg has-error" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Liked Post</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="showPostImageDiv mb-4">
                        <img src="" alt="Post-Image" id="notificationPostPhoto" width="50%" height="300px" style="margin-left : 155px">
                    </div>
                    <div class="title">
                        Title <p id="notificationTitle"></p>
                    </div>
                    <div class="description">
                        Description <p class="overflow-auto" id="notificationDescription"></p>
                    </div>
                </div>
            </div>
        </div>
</div>

{{!-- Delete comment cofrim Model --}}
<div class="modal modal-blur fade deleteBtn" id="modal-deleteBtn" tabindex="-1" role="dialog" aria-hidden="true">
    <form id="DeleteCommentForm" enctype="multipart/form-data">
        <div class="modal-dialog modal-lg has-error" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Comment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="modal-title">Are you sure?</div>
                    <div>your comment will be delete permnently.</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-link link-secondary me-auto"
                        data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger confrimDeleteBtn" data-bs-dismiss="modal">Yes</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="/javascripts/custome-js/comment.js"></script>