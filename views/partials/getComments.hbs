<div class="overflow-auto p-3 bg-light" style="max-width: 100%; max-height: 300px;">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Comments</h3>
        </div>
        <div class="table-responsive">
            <table class="table card-table table-vcenter text-nowrap datatable">
                <thead>
                    <tr>
                        <th>UserName</th>
                        <th>Comment</th>
                        <th>Time</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if commentsData}}
                    {{#each commentsData}}
                    <tr>
                        <td>{{commentByUser.firstName}} {{commentByUser.lastName}}</td>
                        <td>{{message}}
                            {{#compare ../userDetails._id "==" commentByUser._id}}
                            <a href="javascript:void(0)" class="text-muted deleteComment" data-title="deleteComment">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-trash" viewBox="0 0 16 16">
                                    <path
                                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                    <path
                                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                </svg>
                            </a>
                        </td>
                        {{/compare}}
                        </td>
                        <td class="text-muted">{{dateFormat createdOn}}</td>
                    </tr>
                    {{/each}}
                    {{else}}
                    <tr>
                        <td colspan="3" align="center"><span class="text-muted">Do Your First Comment</span></td>
                    </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>